#-----------------------------------------------------------------------------
#
# ToolCursorConfig.cmake - cmake configuration file for external projects.
#
#-----------------------------------------------------------------------------
@TOOLCURSOR_CONFIG_CODE@
# The C and C++ flags added to the cmake-configured flags.
set(TOOLCURSOR_REQUIRED_C_FLAGS "@TOOLCURSOR_REQUIRED_C_FLAGS@")
set(TOOLCURSOR_REQUIRED_CXX_FLAGS "@TOOLCURSOR_REQUIRED_CXX_FLAGS@")

# The version number
set(TOOLCURSOR_MAJOR_VERSION "@TOOLCURSOR_MAJOR_VERSION@")
set(TOOLCURSOR_MINOR_VERSION "@TOOLCURSOR_MINOR_VERSION@")
set(TOOLCURSOR_PATCH_VERSION "@TOOLCURSOR_PATCH_VERSION@")

# Configured settings
set(TOOLCURSOR_BUILD_SHARED_LIBS "@BUILD_SHARED_LIBS@")

# Dependencies
set(TOOLCURSOR_VTK_DIR "@VTK_DIR@")
if(NOT VTK_FOUND)
  find_package(VTK PATHS "${TOOLCURSOR_VTK_DIR}")
else()
  get_filename_component(tmp1 "${TOOLCURSOR_VTK_DIR}" REALPATH)
  get_filename_component(tmp2 "${VTK_DIR}" REALPATH)
  if(NOT "${tmp1}" STREQUAL "${tmp2}")
    message(WARNING
      "Mismatch for VTK between TOOLCURSOR and current project: "
      "TOOLCURSOR_DIR=${TOOLCURSOR_DIR} "
      "TOOLCURSOR_VTK_DIR=${TOOLCURSOR_VTK_DIR} "
      "VTK_DIR=${VTK_DIR}")
  endif()
endif()

# Get the current directory
get_filename_component(TOOLCURSOR_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

# The location of the "use" file.
set(TOOLCURSOR_USE_FILE "${TOOLCURSOR_CMAKE_DIR}/UseToolCursor.cmake")

# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT TARGET vtkImageRegistration AND NOT TOOLCURSOR_BINARY_DIR)
  include("${TOOLCURSOR_CMAKE_DIR}/ToolCursorTargets.cmake")
endif()

# Compute paths
set(TOOLCURSOR_INCLUDE_DIRS "@INCLUDE_DIRS_CONFIG@")
set(TOOLCURSOR_LIBRARY_DIRS "@LIBRARY_DIRS_CONFIG@")

# These are IMPORTED targets created by ToolCursorTargets.cmake
set(TOOLCURSOR_LIBRARIES @TOOLCURSOR_LIBRARIES@)
